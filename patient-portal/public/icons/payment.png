<svg width="192" height="192" viewBox="0 0 192 192" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="paymentGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#00ff00"/>
      <stop offset="100%" style="stop-color:#ffff00"/>
    </linearGradient>
    <filter id="paymentGlow">
      <feGaussianBlur stdDeviation="2" result="coloredBlur"/>
      <feMerge>
        <feMergeNode in="coloredBlur"/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>
  </defs>

  <!-- Credit card background -->
  <rect x="25" y="60" width="142" height="72" rx="12" ry="12" fill="url(#paymentGradient)" opacity="0.2"/>
  <rect x="25" y="60" width="142" height="72" rx="12" ry="12" fill="none" stroke="url(#paymentGradient)" stroke-width="3" filter="url(#paymentGlow)"/>

  <!-- Card chip -->
  <rect x="40" y="75" width="15" height="10" rx="2" ry="2" fill="url(#paymentGradient)" filter="url(#paymentGlow)"/>

  <!-- Card number dots -->
  <g fill="url(#paymentGradient)" opacity="0.8">
    <circle cx="75" cy="95" r="3"/>
    <circle cx="85" cy="95" r="3"/>
    <circle cx="95" cy="95" r="3"/>
    <circle cx="105" cy="95" r="3"/>
    <circle cx="120" cy="95" r="3"/>
    <circle cx="130" cy="95" r="3"/>
    <circle cx="140" cy="95" r="3"/>
    <circle cx="150" cy="95" r="3"/>
  </g>

  <!-- Dollar sign -->
  <g stroke="url(#paymentGradient)" stroke-width="4" stroke-linecap="round" fill="none" filter="url(#paymentGlow)">
    <line x1="96" y1="35" x2="96" y2="45"/>
    <path d="M 88 38 C 88 32, 92 28, 96 28 C 100 28, 104 32, 104 38 L 104 42 C 104 48, 100 52, 96 52 C 92 52, 88 48, 88 42"/>
    <line x1="96" y1="52" x2="96" y2="62"/>
  </g>
</svg>