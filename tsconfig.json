{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2020",
    "lib": ["ES2021", "dom"],
    "outDir": "./dist",
    "rootDir": "./",
    
    /* Type Checking - Relaxed (frontend tiene su propio config) */
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    
    /* Module System */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    
    /* Emit */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "downlevelIteration": true,
    
    /* JSX */
    "jsx": "react-jsx",
    
    /* Module Resolution - Deprecated warnings silenced */
    "moduleResolution": "node",
    "ignoreDeprecations": "5.0",
    
    /* Node Types */
    "types": ["node"],
    
    /* Paths (solo backend Selene) */
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"],
      "@/Apollo/*": ["apollo-nuclear/Apollo/*"],
      "@/Core/*": ["apollo-nuclear/Apollo/Core/*"],
      "@/Reactor/*": ["apollo-nuclear/Apollo/Reactor/*"],
      "@/Radiation/*": ["apollo-nuclear/Apollo/Radiation/*"],
      "@/Fusion/*": ["apollo-nuclear/Apollo/Fusion/*"],
      "@/Containment/*": ["apollo-nuclear/Apollo/Containment/*"]
    }
  },
  "include": [
    "selene/**/*.ts",
    "selene/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "selene/snapshots/**",
    "frontend/**/*",
    "patient-portal/**/*",
    "dashboard-new/**/*"
  ]
}